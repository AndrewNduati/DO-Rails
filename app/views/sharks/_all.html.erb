<% for post in @shark.posts %>
    <ul>
        <li class="post">
            <%= post.body %>
            <%# controller here refers to Stimulus controllers %>
            <%= button_tag "Remove Post", data: { controller: "posts", action: "posts#remove" } %>
            <%= button_tag "Upvote Post", data: { controller: "posts", action: "posts#upvote" } %>
        </li>
    </ul>
<%end%>